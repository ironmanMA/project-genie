{
  "name": "Project Genie",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Project Genie",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "permissions": [ "https://*.amazonaws.com/*","http://localhost/*", "tabs", "tabCapture", "downloads", "storage"],

  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://hangouts.google.com/call/*","https://www.speakpipe.com/*"
      ],
      "js": [
        "js/lame.min.js",
        "js/jquery-3.3.1.min.js",
        "src/inject/inject.js"
      ]
    }
  ]
}